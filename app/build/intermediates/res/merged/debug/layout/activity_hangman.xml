<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
    layout="@layout/layout_toolbar" />


    <RelativeLayout
        android:id="@+id/game_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:id="@+id/ivHangman"
            android:src="@drawable/hangman6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvInputTitle"
            android:layout_below="@+id/ivHangman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guess a letter in the textfield below"
            />

        <EditText
            android:id="@+id/etInput"
            android:layout_below="@+id/tvInputTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/ivHangman"
            android:layout_alignEnd="@+id/ivHangman"
            android:maxLength="1"/>

        <TextView
            android:id="@+id/tvGuesses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/ivHangman"
            android:layout_toEndOf="@+id/ivHangman" />

        <TextView
            android:id="@+id/tvGuessedCharactersTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guessed characters:"
            android:layout_below="@+id/etInput"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvGuessedCharacters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/tvGuessedCharactersTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:textAlignment="center"
            android:text=""
            android:layout_below="@+id/tvGuessedCharacters"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/bGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guess"
            android:layout_below="@+id/tvInputTitle"
            android:layout_toRightOf="@+id/etInput"
            android:layout_toEndOf="@+id/etInput" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/tvActualWord"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/llStringBox"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/string_box_height"
        android:gravity="center">

    </LinearLayout>

    <android.inputmethodservice.KeyboardView
        android:id="@+id/keyboardview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorTextPrimary"
        android:keyBackground="@color/colorPrimary"
        android:shadowColor="@color/colorPrimaryDark"
        android:layout_gravity="center"/>


</LinearLayout><!-- From: file:/C:/Users/Ragger/Dropbox/Studie/AppStudio/projects/EvilHangman/app/src/main/res/layout/activity_hangman.xml -->