<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:id="@+id/canvas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/game_layout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="50dp">

            <Button
                android:id="@+id/bGuess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guess"
                android:layout_below="@+id/tvInputTitle"
                android:layout_toRightOf="@+id/etInput"
                android:layout_toEndOf="@+id/etInput"
                android:visibility="invisible"/>

            <EditText
                android:id="@+id/etInput"
                android:layout_below="@+id/tvInputTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/ivHangman"
                android:layout_alignEnd="@+id/ivHangman"
                android:maxLength="1"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ivHangman"
                android:src="@drawable/hangman6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/tvGuessedCharacters"
                android:layout_alignStart="@+id/tvGuessedCharacters" />

            <TextView
                android:id="@+id/tvGuesses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-1"
                android:layout_alignTop="@+id/ivHangman"
                android:layout_toRightOf="@+id/ivHangman"
                android:layout_toEndOf="@+id/ivHangman" />

            <TextView
                android:id="@+id/tvGuessedCharactersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guessed"
                android:layout_below="@+id/ivHangman"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/tvGuessedCharacters"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_below="@+id/tvGuessedCharactersTitle"
                android:layout_toRightOf="@+id/tvWord"
                android:layout_toEndOf="@+id/tvWord" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*******"
                android:id="@+id/tvActualWord"
                android:layout_below="@+id/bGuess"
                android:layout_alignRight="@+id/tvGuesses"
                android:layout_alignEnd="@+id/tvGuesses"
                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="50dp"
                android:textAlignment="center"
                android:text="" />

            <LinearLayout
                android:id="@+id/llStringBox"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/string_box_height"
                android:gravity="center"
                android:layout_above="@+id/ivHangman"
                android:layout_alignLeft="@+id/ivHangman"
                android:layout_alignStart="@+id/ivHangman"/>

        </RelativeLayout>

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboardview"
            android:layout_width="327dp"
            android:layout_height="271dp"
            android:background="@color/colorTextPrimary"
            android:keyBackground="@color/colorPrimary"
            android:shadowColor="@color/colorPrimaryDark"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp" />

    </LinearLayout>

</LinearLayout>