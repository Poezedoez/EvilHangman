<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ragger.evilhangman.HighscoresActivity">

    <include
        android:id="@+id/custom_toolbar"
        layout="@layout/layout_toolbar"/>

    <include
        android:id="@+id/headerEntry"
        layout="@layout/layout_highscore_entry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/custom_toolbar"/>

    <ListView
        android:id="@+id/lvScores"
        android:layout_below="@+id/headerEntry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@+id/tvLastScoreTitle"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lvScores"
        android:textSize="20sp"
        android:text="You score from last game:"/>

    <TextView
        android:id="@+id/tvLastScore"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvLastScoreTitle"
        android:textSize="30sp"/>

</RelativeLayout>
