<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Style for the toolbar (white letters and icons) -->
    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <!-- Style for the popup menu -->
    <style name="PopupMenuStyle" parent="AppTheme">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:colorPressedHighlight">@color/colorAccent</item>
    </style>


</resources>